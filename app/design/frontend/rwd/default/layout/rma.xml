<?xml version="1.0" ?>
<layout version="0.1.0">
    <customer_account translate="label">
        <reference name="customer_account_navigation">                    
            <action method="addLink"><name>rma</name><path>rma/index</path><label>Rma</label></action>           
         </reference>
    </customer_account>
    
     <rma_index_index translate="label">
        <label>Customer My Account Returns History</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="rma/return_history" name="rma.return.history">
                <block type="core/text_list" name="rma.return.history.info" as="info" translate="label">
                    <label>Returns History Info</label>
                </block>
            </block>
            <block type="rma/return_history" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
        </reference>
    </rma_index_index>
    
    <rma_index_view translate="label">
        <label>Customer Return Order History</label>
        <update handle="customer_account"/>
            <reference name="my.account.wrapper">
                <block type="rma/return_order_view" name="rma.return.order.view">
                   <block type="core/text_list" name="rma.return.order.view" as="info" translate="label">
                    <label>Return Order History Info</label>
                </block>  
                </block>
            </reference>
    </rma_index_view>
    
    <rma_adminhtml_rma_index>
        <reference name="content">
            <block type="rma/adminhtml_rma" name="rma" />
        </reference>
    </rma_adminhtml_rma_index>
    
</layout>

