<?xml version="1.0" ?>
<layout version="0.1.0">
    <customer_account translate="label">
        <block type="rma/account_navigation" name="rma_account_navigation">                   
            <action method="addDashboardLink"><name>rma</name><path>rma/index</path><label>Rma</label></action>                       
        </block>
        <reference name="customer_account_navigation">
            <action method="addLink"><name>bankdetails</name><path>rma/index/bank</path><label>MY Bank Details</label></action>      
        </reference>
    </customer_account>
    
    <rma_index_index translate="label">
        <label>Customer My Account Returns History</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="rma/return_history" name="rma.return.history">
                <block type="core/text_list" name="rma.return.history.info" as="info" translate="label">
                    <label>Returns History Info</label>
                </block>
            </block>          
        </reference>
    </rma_index_index>
    
    <rma_index_view translate="label">
        <label>Customer Return Order History</label>
        <update handle="customer_account"/>
            <reference name="my.account.wrapper">
                <block type="rma/return_order_view" name="rma.return.order.view">
<!--                   <block type="core/text_list" name="rma.return.order.view" as="info" translate="label">
                    <label>Return Order History Info</label>-->
<!--                </block>  -->
                </block>
                <block type="rma/return_history" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
            </reference>
    </rma_index_view>
    
    <rma_adminhtml_rma_index>
        <reference name="content">
            <block type="rma/adminhtml_rma" name="rma" />
        </reference>
    </rma_adminhtml_rma_index>
    
    <rma_index_addrequest>
        <label>Create New RMA Request</label>
        <update handle="customer_account"/>
            <reference name="my.account.wrapper">
                 <block type="rma/return_history" name="customer.account.link.back" template="customer/account/link/back.phtml"/> 
                <block type="rma/return_order_request" name="rma.return.order.request">                
                 </block>
            </reference>
    </rma_index_addrequest>
    
    <rma_index_bankform>        
        <label>Customer Account Form</label>
        <reference name="content">
            <block type="core/template" name="bank.form" template="rma/return/bankform.phtml"/>
        </reference>
    </rma_index_bankform>
    
    <rma_index_cancelorder translate="label">
        <label>Cancel Order Request</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="rma/return_history" name="customer.account.link.back" template="customer/account/link/back.phtml"/> 
            <block type="rma/return_order_request" name="rma.return.order.request"/>
        </reference>
    </rma_index_cancelorder>
    
    <rma_index_bank>
        <update handle="customer_account"/>
            <reference name="my.account.wrapper">
                    <block type="rma/adminhtml_customer_tab" name="rma.adminhtml.customer.tab">
                        
                    </block>
                <block type="rma/return_history" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
            </reference>
    </rma_index_bank>
</layout>

