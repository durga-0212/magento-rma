<?xml version="1.0" ?>
<layout version="0.1.0">
    <customer_account translate="label">
        <reference name="customer_account_navigation">                    
            <action method="addLink"><name>rma</name><path>rma/index</path><label>Rma</label></action>           
         </reference>
    </customer_account>
    
     <rma_index_index translate="label">
        <label>Customer My Account Returns History</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="rma/return_history" name="rma.return.history">
                <block type="core/text_list" name="rma.return.history.info" as="info" translate="label">
                    <label>Returns History Info</label>
                </block>
            </block>
            <block type="rma/return_history" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
        </reference>
    </rma_index_index>
    
    <rma_adminhtml_rma_productgrid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="rma/adminhtml_rma_edit_tab_product" name="adminhtml.rma.edit.tab.productgrid"/>
        </block>
    </rma_adminhtml_rma_productgrid>
    
    <rma_adminhtml_rma_addcomment>
        <block type="rma/adminhtml_rma_edit_tab_general_history" template="rma/edit/general/history.phtml" name="comments_history" output="toHtml"/>
    </rma_adminhtml_rma_addcomment>
    
    <rma_adminhtml_rma_edit>
         <reference name="content">
            <block type="rma/adminhtml_rma_edit" name="adminhtml_rma_edit" />
          </reference>
           <reference name="left">
            <block type="rma/adminhtml_rma_edit_tabs" name="adminhtml_rma_edit_tabs">
                <block type="rma/adminhtml_rma_edit_tab_general" template="rma/edit/general.phtml" name="rma_edit_tab_general">
                    <block type="rma/adminhtml_rma_edit_tab_general_details" template="rma/edit/general/details.phtml" name="request_details" />                    
                    <block type="rma/adminhtml_rma_edit_tab_general_shippingaddress" template="rma/edit/general/shippingaddress.phtml" name="shipping_address" />
                    <block type="rma/adminhtml_rma_edit_tab_general_returnaddress" template="rma/edit/general/returnaddress.phtml" name="return_address" />
                    <block type="rma/adminhtml_rma_edit_tab_general_history" template="rma/edit/general/history.phtml" name="comments_history" />
                </block>
                <block type="rma/adminhtml_rma_edit_tab_items" template="rma/edit/items.phtml" name="rma_edit_tab_items">
                    <block type="rma/adminhtml_rma_edit_tab_items_grid" name="items_grid" />
                </block>
                <action method="addTab"><name>general_section</name><block>rma_edit_tab_general</block></action>
                <action method="addTab"><name>items_section</name><block>rma_edit_tab_items</block></action>
            </block>
        </reference>
    </rma_adminhtml_rma_edit>
    
    <rma_adminhtml_rma_index>
        <reference name="content">
            <block type="rma/adminhtml_rma" name="rma" />
        </reference>
    </rma_adminhtml_rma_index>
</layout>