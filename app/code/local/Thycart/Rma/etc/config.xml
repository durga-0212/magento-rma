<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Thycart_Rma>
            <version>0.1.0</version> 
        </Thycart_Rma>
    </modules>
    <global>
        <models>
            <rma>
                <class>Thycart_Rma_Model</class>
                <resourceModel>rma_resource</resourceModel>
            </rma>
            <rma_resource>
                <class>Thycart_Rma_Model_Resource</class>
                <entities>
                    <order>
                        <table>rma_order</table>
                    </order>
                    <rma_item>
                        <table>rma_order_item</table>
                    </rma_item>
                    <rma_history>
                        <table>rma_order_history</table>
                    </rma_history>
                    <rma_attributes>
                        <table>rma_attributes</table>
                    </rma_attributes>
                    <rma_eav_attribute>
                        <table>rma_eav_attribute</table>
                    </rma_eav_attribute>
                    <rma_eav_attributeoption>
                        <table>rma_eav_attribute_option</table>
                    </rma_eav_attributeoption>
                </entities>
            </rma_resource>
        </models>
        <resources>
            <rma_setup>
                <setup>
                    <module>Thycart_Rma</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </rma_setup> 
            <rma_write>
                <connection> 
                    <use>core_write</use> 
                </connection> 
            </rma_write> 
            <rma_read> 
                <connection> 
                    <use>core_read</use> 
                </connection> 
            </rma_read>        
        </resources>        
        <blocks>
            <rma>
                <class>Thycart_Rma_Block</class>
            </rma>
        </blocks>
        <helpers>
            <rma>
                <class>Thycart_Rma_Helper</class>
            </rma>
        </helpers>
        <template>
            <email>
                <rma_template>
                    <label>Rma Template</label>
                    <file>rma_template.html</file>
                    <type>html</type>
                </rma_template>
            </email>
        </template>
    </global>
    <admin>
        <routers>
            <rma>
               <use>admin</use>
               <args>
                    <module>Thycart_Rma</module>
                    <frontName>rma</frontName>                    
                </args> 
            </rma>
        </routers>        
    </admin>             
    <adminhtml>
        <layout>
            <updates>
                <rma>
                    <file>rma.xml</file>
                </rma>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <routers>
            <rma>
                <use>standard</use>
                <args>
                    <module>Thycart_Rma</module>
                    <frontName>rma</frontName>                    
                </args>
            </rma>
            <sales>
                <args>
                    <modules>
                        <Thycart_Rma before='Mage_Sales'>Thycart_Rma</Thycart_Rma>
                    </modules>
                </args>
            </sales> 
        </routers>
        <layout>
            <updates>
                <rma>
                    <file>rma.xml</file>
                </rma>
            </updates>
        </layout>
    </frontend>
</config>